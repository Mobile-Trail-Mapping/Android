<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="@string/category_application">
		<CheckBoxPreference
			android:title="@string/title_save"
			android:defaultValue="true"
			android:summary="@string/summary_save"
			android:key="SavedMapState"/>
		<CheckBoxPreference
			android:title="@string/title_zoom"
			android:summary="@string/summary_zoom"
			android:key="ZoomOnCenter"
			android:defaultValue="true"/>
		<ListPreference
			android:title="@string/title_default_zoom"
			android:summary="@string/summary_default_zoom"
			android:key="DefaultZoom"
			android:entries="@array/DefaultZoomsHuman"
			android:entryValues="@array/DefaultZoomsInts"
			android:defaultValue="15"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/category_community"
		android:key="@string/key_community">
		<com.brousalis.mtm.ConfirmPreference
			android:key="@string/key_logout_preference"
			android:title="@string/title_logout"
			android:summary="@string/summary_logout"
			android:dialogTitle="@string/title_logout"
			android:dialogMessage="@string/confirm_logout"
			android:negativeButtonText="@string/cancel"
			android:positiveButtonText="@string/ok"/>
		<com.brousalis.mtm.LoginPreference
			android:key="@string/key_login_preference"
			android:title="@string/login_title"
			android:negativeButtonText="@string/cancel"
			android:positiveButtonText="@string/login"
			android:dialogLayout="@layout/login_dialog"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/category_debug">
		<Preference
			android:title="@string/title_reset_images"
			android:summary="@string/summary_reset_images"
			android:key="@string/key_reset_images"/>
		<com.brousalis.mtm.AboutPreference
			android:key="@string/key_about"
			android:title="@string/about_title"
			android:dialogTitle="@string/about_title"
			android:dialogMessage="@string/aboutthetrails"
			android:positiveButtonText="@string/ok"/>
	</PreferenceCategory>
</PreferenceScreen>