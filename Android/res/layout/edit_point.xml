<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<View
				style="@style/TitleHilight"
				android:layout_marginTop="10dip"/>
			<TextView
				android:id="@+id/EditPointTitle"
				style="@style/TitleText"
				android:text="Edit Point"
				android:gravity="center"
				android:textSize="20dip"/>
			<View
				style="@style/TitleHilight"
				android:layout_marginBottom="10dip"/>
			<TextView
				android:text="Condition"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<EditText
				android:id="@+id/point_condition"
				android:hint="Trail Condition"
				android:singleLine="true"
				android:selectAllOnFocus="true"
				android:inputType="textCapWords"
				android:imeOptions="actionNext"
				style="@style/TextBoxPref"/>
			<TextView
				android:text="Description"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<EditText
				android:id="@+id/point_summary"
				android:lines="3"
				android:hint="Description of this location"
				android:singleLine="false"
				android:gravity="top"
				android:imeOptions="actionDone"
				style="@style/TextBoxPref"/>
			<View
				android:layout_width="fill_parent"
				android:layout_height="80dip"/>
		</LinearLayout>
	</ScrollView>
	<TableLayout
		android:stretchColumns="*"
		android:layout_gravity="bottom"
		android:padding="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/gray_background">
		<TableRow>
			<Button
				android:id="@+id/edit_point_button"
				android:layout_width="120dip"
				android:layout_height="wrap_content"
				android:text="Edit Point"/>
			<Button
				android:id="@+id/go_back_button"
				android:layout_width="120dip"
				android:layout_height="wrap_content"
				android:text="@string/cancel"/>
		</TableRow>
	</TableLayout>
</FrameLayout>