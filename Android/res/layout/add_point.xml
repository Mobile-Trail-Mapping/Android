<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		<TextView
			android:text="Trail to put point on"
			style="@style/TitleText"/>
		<View
			style="@style/TitleHilight"/>
		<Spinner
			android:id="@+id/new_point_trail"
			style="@style/SpinnerPref"/>
		<TextView
			android:id="@+id/new_point_category_title"
			android:text="@string/point_category"
			style="@style/TitleText"/>
		<View
			style="@style/TitleHilight"/>
		<Spinner
			android:id="@+id/new_point_category"
			style="@style/SpinnerPref"
			android:entries="@array/DefaultPointCategories"/>
		<TextView
			android:text="Picture of location"
			style="@style/TitleText"/>
		<View
			style="@style/TitleHilight"/>
		<LinearLayout
			style="@style/HorizontalLayoutPref">
			<ImageView
				android:layout_width="200dip"
				android:layout_height="200dip"
				android:layout_marginRight="30dip"
				android:id="@+id/picture_preview"
				android:src="@drawable/icon"
				android:scaleType="fitCenter"/>
			<Button
				android:id="@+id/add_picture_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Add Picture"/>
		</LinearLayout>
		<TextView
			android:id="@+id/new_point_summary_title"
			android:text="Title of Point"
			style="@style/TitleText"/>
		<View
			style="@style/TitleHilight"/>
		<EditText
			android:id="@+id/new_point_title"
			android:hint="Title of Item"
			android:singleLine="true"
			android:selectAllOnFocus="true"
			android:inputType="textCapWords"
			android:imeOptions="actionNext"
			style="@style/TextBoxPref"/>
		<TextView
			android:id="@+id/new_point_summary_title"
			android:text="Point Description"
			style="@style/TitleText"/>
		<View
			style="@style/TitleHilight"/>
		<EditText
			android:id="@+id/new_point_summary"
			android:lines="3"
			android:hint="Description of this item"
			android:singleLine="false"
			android:gravity="top"
			style="@style/TextBoxPref"/>
		<TableLayout
			android:stretchColumns="*"
			android:padding="10dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TableRow>
				<Button
					android:id="@+id/add_point_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Add Point"/>
				<Button
					android:id="@+id/go_back_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/cancel"/>
			</TableRow>
		</TableLayout>
	</LinearLayout>
</ScrollView>