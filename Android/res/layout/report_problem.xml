<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<View
				style="@style/TitleHilight"
				android:layout_marginTop="10dip"/>
			<TextView
				style="@style/TitleText"
				android:id="@+id/detail_title"
				android:text="Report A Problem"
				android:gravity="center"
				android:textSize="20dip"/>
			<View
				style="@style/TitleHilight"
				android:layout_marginBottom="10dip"/>
			<TextView
				android:text="What is the problem?"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<EditText
				android:id="@+id/new_problem_text"
				android:singleLine="true"
				android:selectAllOnFocus="true"
				android:inputType="textCapWords"
				android:imeOptions="actionNext"
				style="@style/TextBoxPref"/>
			<TextView
				android:text="Problem Description"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<EditText
				android:id="@+id/new_problem_desc"
				android:hint="The Problem is with the..."
				android:gravity="top"
				android:lines="3"
				android:imeOptions="actionDone"
				style="@style/TextBoxPref"/>
			<TextView
				android:text="@string/picture_of_problem"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<LinearLayout
				style="@style/HorizontalLayoutPref">
				<ImageView
					android:layout_width="200dip"
					android:layout_height="200dip"
					android:id="@+id/picture_preview"
					android:src="@drawable/camera"
					android:scaleType="fitCenter"/>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					android:gravity="center">
					<Button
						android:id="@+id/add_picture_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Add Picture"/>
					<Button
						android:id="@+id/remove_picture_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:visibility="gone"
						android:text="Remove Picture"/>
				</LinearLayout>
			</LinearLayout>
			<View
				style="@style/TitleHilight"
				android:layout_marginTop="10dip"/>
			<TableLayout
				android:stretchColumns="*"
				android:padding="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@color/gray_background">
				<TableRow>
					<Button
						android:id="@+id/add_point_button"
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:text="Report Problem"/>
					<Button
						android:id="@+id/go_back_button"
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:text="@string/cancel"/>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="bottom"
		android:id="@+id/upload_progress"
		android:visibility="invisible"
		android:layoutAnimation="@anim/slide_up_anim"
		android:paddingBottom="10dip"
		android:background="@color/black"
		android:gravity="center">
		<View
			style="@style/TitleHilight"
			android:layout_marginTop="10dip"/>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">
			<ProgressBar
				android:layout_width="30dip"
				android:layout_height="30dip"
				android:layout_marginTop="10dip"
				android:layout_marginBottom="10dip"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:text="Uploading Image"/>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>