<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<TextView
				android:text="What is the problem?"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<EditText
				android:id="@+id/new_problem_text"
				android:singleLine="true"
				android:selectAllOnFocus="true"
				android:inputType="textCapWords"
				android:imeOptions="actionNext"
				style="@style/TextBoxPref"/>
			<TextView
				android:text="Problem Description"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<EditText
				android:id="@+id/new_problem_desc"
				android:singleLine="false"
				android:lines="3"
				android:selectAllOnFocus="true"
				android:inputType="textCapWords"
				android:imeOptions="actionDone"
				style="@style/TextBoxPref"/>
			<TextView
				android:text="@string/picture_of_problem"
				style="@style/TitleText"/>
			<View
				style="@style/TitleHilight"/>
			<LinearLayout
				style="@style/HorizontalLayoutPref">
				<ImageView
					android:layout_width="200dip"
					android:layout_height="200dip"
					android:id="@+id/picture_preview"
					android:src="@drawable/camera"
					android:scaleType="fitCenter"/>
				<Button
					android:id="@+id/add_picture_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="Add Picture"/>
			</LinearLayout>
			<TableLayout
				android:stretchColumns="*"
				android:padding="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TableRow>
					<Button
						android:id="@+id/add_point_button"
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:text="Add Point"/>
					<Button
						android:id="@+id/go_back_button"
						android:layout_width="120dip"
						android:layout_height="wrap_content"
						android:text="@string/cancel"/>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:id="@+id/upload_progress"
		android:visibility="invisible"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="bottom"
		android:layoutAnimation="@anim/slide_up_anim"
		android:layout_marginBottom="10dip"
		android:background="@color/black"
		android:gravity="center">
		<ProgressBar
			android:layout_width="30dip"
			android:layout_height="30dip"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			android:text="Uploading Image"/>
	</LinearLayout>
</FrameLayout>