<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="TitleText" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#BFBFBF</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">#323232</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="TitleHilight">
		<item name="android:background">#FF808080</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1px</item>
	</style>
	<style name="TextBoxPref" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="SpinnerPref" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">3dip</item>	
	</style>
	<style name="HorizontalLayoutPref">
		<item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_gravity">center</item>	
	</style>
	<style name="ImagePref">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">30dip</item>
	</style>
</resources>
